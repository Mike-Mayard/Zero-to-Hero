# Create a function to test in another file. Exercise 11-2.
def city_country(city, country, population=''):

    if population:
        place = f"{city.title()}, {country.title()}, {population}"
    else:
        place = f"{city.title()}, {country.title()}"
    return place


# print(city_country('brooklyn', 'new york'))
# print(city_country('brooklyn', 'new york', '20000'))
